.container
  max-width: var(--content-width)
  margin: 0 auto
  flex: 1
  display: flex
  flex-direction: column
  min-height: calc(100% - var(--header-height))

.hidden
  display: none!important

.spacer
  flex: 1

#banner
  position: relative
  overflow: hidden
  box-shadow: var(--box-shadow)

#banner-background
  width: 100%
  height: 228px
  background-size: cover
  background-position: 50% 50%
  filter: blur(4px)
  
#banner-content
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0

  img
    padding: 50px
    height: 128px
    image-rendering: pixelated
    filter: drop-shadow(0 10px 4px var(--color-text-shadow))
    
#category-name
  position: absolute
  top: 20px
  right: 20px
  text-transform: uppercase
  font-weight: 700
  letter-spacing: 5px
  text-shadow: -2px 2px 1px var(--color-text-shadow)

#optifine
  display: flex
  background-image: var(--gradient-optifine)
  min-height: 50px
  box-shadow: var(--box-shadow)
  font-weight: 700
  text-shadow: 0 3px 1px var(--color-text-shadow-optifine)
  color: var(--color-text-optifine)
  overflow: hidden
  width: 100%
  z-index: 1

  .optifine-desc
    padding: 10px
    display: flex
    align-items: center

  #optifine-img
    width: 50px
    display: flex
    align-items: center
    
    img
      height: 50px

  #optifine-info
    display: flex
    align-items: center

    .text::after
      content: "More Information"
      
  a .text::after
    content: "Download OptiFine"

  a, #optifine-info
    display: flex
    align-items: center
    padding: 0 15px
    cursor: pointer
    transition: background-color .15s
    user-select: none
    color: var(--color-text-optifine)
    text-decoration: none

    & > *
      transition: transform .15s

    span
      text-align: center

    svg
      padding-right: 10px
      min-width: 28px
      min-height: 28px
      fill: var(--color-text-optifine)
      filter: drop-shadow(0 3px 1px var(--color-text-shadow-optifine))

    &:hover
      background-color: #A93931

    &:active > *
      transform: translateY(4px)

#entry-content
  flex: 1
  display: flex

#entry-info
  flex: 1
  display: flex
  flex-direction: column
  align-items: center
  padding: 20px 20px 60px

#images
  display: flex
  user-select: none
  position: relative
  overflow: hidden
  margin: 30px 40px 60px
  max-width: 720px
  width: clamp(50vw, 50vw, 80vw)

  img
    max-width: 100%

.image-button
  cursor: pointer
  position: absolute
  top: calc(50% - 50px)
  transform: translateY(-50%)
  padding: 20px
  box-sizing: border-box
  z-index: 1
  opacity: 0
  transition: left .15s, right .15s, opacity .15s, transform .15s

  &#next
    right: -60px

    &:hover
      right: 0
      opacity: 1
      transform: translateY(-50%) scale(1.4)

  &#prev
    left: -60px

    &:hover
      left: 0
      opacity: 1
      transform: translateY(-50%) scale(1.4)

  svg
    overflow: visible

  path
    fill: white
    filter: drop-shadow(4px 4px 1px var(--color-text-shadow))

  &.disabled
    opacity: 0!important
    cursor: default

.showcase-image
  display: none
  cursor: pointer
  max-width: 720px
  width: clamp(50vw, 50vw, 80vw)

  &:hover ~ #prev
    left: 0
    opacity: 1

  &:hover ~ #next
    right: 0
    opacity: 1

.video-container
  position: relative
  padding-bottom: 56.25%
  height: 0
  
  iframe
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

.shown
  display: block
  animation: fadeIn .25s forwards 1
  opacity: 0

  @keyframes fadeIn
    from
      opacity: 0
    to
      opacity: 1

#thumbnail-row 
  display: flex
  width: 100%

  div
    height: 100px
    flex: 1
    background-size: cover
    background-position: 50% 50%
    filter: grayscale(100%)
    opacity: 0.6
    transition: filter .15s, opacity .15s
    cursor: pointer
    
    &:hover
      filter: grayscale(0)
      opacity: 1

  .selected
    filter: grayscale(0)
    opacity: 1
    position: relative
    
    &::after
      content: ""
      position: absolute
      bottom: 0
      left: 0
      right: 0
      height: 5px
      background-color: var(--color-red-light)

#title
  font-size: 4em
  padding: 32px 0 10px
  font-weight: 700
  letter-spacing: 2px
  text-align: center

#subtitle
  font-size: 1.5em
  padding-bottom: 16px

#description
  line-height: 1.5em
  display: flex
  flex-direction: column
  align-items: center
    
  code
    font-size: 16px
    background-color: black
    padding: 0 4px
    
  ul, ol
    text-align: left
    
  li
    margin-bottom: 5px
    
  img
    image-rendering: pixelated

#description, #subtitle
  white-space: pre-wrap
  text-align: center
  max-width: 900px

#entry-links
  min-width: 256px

#entry-links-contents
  height: calc(100% - 110px)
  background-color: var(--color-grey)
  box-shadow: -10px 0 10px var(--color-box-shadow)
  padding-bottom: 60px

#entry-links-tabs
  display: flex
  justify-content: space-around
  padding: 10px 10px 0
  gap: 10px
  background-color: var(--color-grey-darker)
  user-select: none
  overflow-y: hidden

  div
    height: 38px
    flex: 1
    background-color: var(--color-grey-dark)
    cursor: pointer
    display: flex
    justify-content: center
    align-items: center
    border-top: 2px solid transparent
    transition: background-color .15s, border-top .15s
    box-shadow: -10px 0 10px var(--color-box-shadow)

  .selected
    background-color: var(--color-grey)
    border-top: 2px solid var(--color-red-light)

#downloads
  width: 100%

  div
    display: none
    width: 100%
    flex-direction: column
    align-items: center
    padding: 15px 0
    gap: 15px
    flex-wrap: wrap
    
    a
      text-decoration: none
      color: var(--color-text-white)
      padding: 10px
      background-color: var(--color-link-blue)
      width: 206px
      min-width: 100px
      display: flex
      align-items: center
      font-weight: 700
      box-shadow: 0 8px 5px rgba(0, 0, 0, .314)
      transition: filter .15s
      filter: hue-rotate(-90deg)
      gap: 4px
      
      & > *
        transition: transform .15s

      svg
        width: 28px
        height: 28px
        filter: drop-shadow(-2px 2px 1px var(--color-svg-shadow))
        fill: white
        
      span
        text-align: center
        flex: 1
        text-shadow: -2px 2px 1px var(--color-text-shadow)
        letter-spacing: 1px
        
      &.mirror
        filter: hue-rotate(0)

      &:hover
        filter: hue-rotate(-100deg) brightness(1.2)
        
        &.mirror
          filter: hue-rotate(-10deg) brightness(1.2)
        
      &:active > *
        transform: translateY(4px)
  
  .selected
    display: flex
    
#links
  width: 100%
  display: flex
  flex-direction: column
  align-items: center
  padding: 15px 0
  gap: 15px
  
  h3
    margin: 0

  div
    gap: 15px
    display: flex
    flex-direction: column
    flex-wrap: wrap

    a
      text-decoration: none
      color: var(--color-text-white)
      padding: 5px 10px
      background-color: var(--color-grey-light)
      width: 206px
      display: flex
      align-items: center
      font-weight: 700
      box-shadow: 0 8px 5px rgba(0, 0, 0, .314)
      transition: filter .15s
      filter: brightness(1.8)
      gap: 4px
      
      & > *
          transition: transform .15s

      svg
        width: 28px
        height: 28px
        filter: drop-shadow(-2px 2px 1px var(--color-svg-shadow))
        fill: white
        
      span
        text-align: center
        flex: 1
        text-shadow: -2px 2px 1px var(--color-text-shadow)
        letter-spacing: 1px

      &:hover
        filter: brightness(2.3)
        
      &:active > *
        transform: translateY(3px)
      
// mobile

@media only screen and (max-width: 768px)
  #entry-content
    flex-flow: column
    
  #entry-info
    order: 2
    
  #entry-links
    order: 1
    
  #entry-links-contents
    padding: 0
  
  #downloads div, #links div
    flex-direction: row
    justify-content: center
    
  .optifine-desc
    display: none!important
    
  #optifine-info .text::after
    content: "Requirement Info"!important
    
  a .text::after
    content: "Download"!important
    
  #banner-content
    display: flex
    justify-content: center
    align-items: center
    
    img
      max-width: 80vw
      height: auto
      
  #category-name
    right: initial
    
  #images, .showcase-image
    width: 80vw