.container
  max-width: var(--content-width)
  margin: 0 auto
  padding: 0 20px
  display: flex
  flex-direction: column
  
h1
  margin: 0
  padding: 22px 0

h2
  margin: 0

#tools
  display: flex
  flex-direction: column
  gap: 20px
  padding-bottom: 20px

.tool
  background-color: var(--color-grey)
  padding: 20px
  display: flex
  gap: 20px
  justify-content: space-between
  box-shadow: var(--box-shadow)
  color: var(--color-text-white)
  text-decoration: none
  transition: background-color .15s

  &:hover
    background-color: var(--color-grey-light)

.details
  display: flex
  flex-direction: column
  flex: 1

.spacer
  flex: 1

.image
  display: flex

img
  max-height: 224px
  max-width: 100%
  box-shadow: var(--box-shadow)
  
@media only screen and (max-width: 768px)
  .tool
    flex-direction: column
    align-items: center
    
  .details
    width: 100%
    
  img
    margin: auto