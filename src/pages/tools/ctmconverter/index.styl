@import "buttons.styl"

.container
  max-width: var(--content-width)
  margin: 0 auto
  min-height: calc(100% - var(--header-height))
  padding: 0 20px
  display: flex
  flex-direction: column
  
h1
  margin: 0
  padding: 22px 0 0

p
  white-space: pre-wrap
  
a
  color: var(--color-link-blue)

#output
  padding: 40px 20px
  display: flex
  flex-direction: column
  gap: 20px

#error, #generated
  display: flex
  flex-direction: column

canvas, img
  image-rendering: pixelated

.ctm-compact-tiles
  display: flex
  max-width: 640px
  
  > div
    position: relative
  
  canvas
    width: 128px
    display: block
    max-width: calc(20vw - 16px)

.tile-buttons
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  display: flex
  justify-content: space-between
  align-items: center
  overflow: hidden
  user-select: none

  svg
    fill: white
    filter: drop-shadow(0 0 4px black)
    position: absolute
    transition: left .15s, right .15s, width .15s
    cursor: pointer
    width: 32px

    &:first-child
      left: -40px
      
    &:last-child
      right: -40px
      
    &:hover
      width: 48px
      
  &:hover > svg
    &:first-child
      left: 0
      
    &:last-child
      right: 0

.ctm-compact-tiles
  > div:first-child svg:first-child
    display: none
    
  > div:last-child svg:last-child
    display: none

.ctm
  background-image: url("/assets/images/misc/transparent_dark.webp")
  box-shadow: var(--box-shadow)

.ctm-compact-template
  max-width: 320px
  
.ctm-full-template
  max-width: 768px
  
.ctm-overlay-template
  max-width: 448px
  
.ctm-preview-template
  max-width: var(--content-width)
    
.button-download
  margin-bottom: 20px