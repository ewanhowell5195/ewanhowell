.container
  max-width: var(--content-width)
  margin: 0 auto
  flex: 1
  min-height: calc(100% - var(--header-height))

#tabs
  display: flex

.tab
  background-color: var(--color-green)
  padding: 10px
  cursor: pointer
  user-select: none
  transition: background-color 0.15s
  text-shadow: -2px 2px 1px var(--color-text-shadow)
  text-decoration: none
  color: var(--color-text-white)
  text-transform: capitalize
  min-width: 50px
  text-align: center
  
  &:hover
    background-color: var(--color-green-light)
  
.selected
  background-color: var(--color-green-dark)!important
  cursor: default
  
.version
  padding: 0 20px
  display: none

#versions
  padding-bottom: 60px

.shown
  display: block
  animation: fadeIn .25s forwards 1
  opacity: 0

  @keyframes fadeIn
    from
      opacity: 0
    to
      opacity: 1

.packs
  display: flex
  justify-content: space-around
  gap: 10px
  flex-wrap: wrap
  
.pack
  min-width: 256px
  height: 128px
  background-color: var(--color-green-light)
  flex: 1
  display: flex
  justify-content: center
  align-items: center
  cursor: pointer
  text-decoration: none
  color: var(--color-text-white)
  position: relative
  overflow: hidden

  .pack-image
    position: absolute
    width: 100%
    height: 100%
    background-size: cover
    background-position: 50% 50%

  span
    position: absolute
    width: 100%
    height: 100%
    display: flex
    justify-content: center
    align-items: center

  img
    position: absolute
    bottom: 0
    right: 0
    width: 32px
    height: 32px