.container
  max-width: var(--content-width)
  margin: 0 auto
  flex: 1
  min-height: calc(100% - var(--header-height))

#tabs
  display: flex
  position: sticky
  top: 0
  z-index: 1
  background-color: var(--color-green)
  box-shadow: var(--box-shadow)
  height: var(--header-height)

.tab
  display: flex
  padding: 0 10px
  cursor: pointer
  user-select: none
  transition: background-color 0.15s
  text-shadow: -2px 2px 1px var(--color-text-shadow)
  text-decoration: none
  color: var(--color-text-white)
  text-transform: capitalize
  min-width: 50px
  height: 100%
  align-items: center
  justify-content: center
  
  &:hover
    background-color: var(--color-green-light)
  
.selected
  background-color: var(--color-green-dark)!important
  cursor: default
  
.version
  padding: 0 20px
  display: none

#versions
  padding-bottom: 60px

.shown
  display: block
  animation: fadeIn .25s forwards 1
  opacity: 0

  @keyframes fadeIn
    from
      opacity: 0
    to
      opacity: 1

.packs
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(256px, 1fr))
  justify-content: space-around
  gap: 10px
  padding: 0 20px

.pack-container
  display: flex
  flex-direction: column
  align-items: center
  gap: 10px
  text-decoration: none
  
.pack-name
  color: var(--color-text-white)
  font-size: 1.2em
  letter-spacing: 1px
  font-weight: 700
  padding-bottom: 10px

.pack-images
  min-width: 256px
  height: 128px
  background-color: var(--color-green-light)
  display: flex
  justify-content: center
  align-items: center
  cursor: pointer
  text-decoration: none
  color: var(--color-text-white)
  position: relative
  overflow: hidden
  align-self: stretch
  box-shadow: var(--box-shadow)
  
.pack-image
  position: absolute
  width: 100%
  height: 100%
  background-size: cover
  background-position: 50% 50%

.logo
  position: absolute
  top: 16px
  bottom: 16px
  left: 16px
  right: 16px
  background-size: contain
  background-position: 50% 50%
  background-repeat: no-repeat
  filter: drop-shadow(0 10px 4px var(--color-text-shadow))

.optifine
  position: absolute
  bottom: 0
  right: 0
  width: 32px
  height: 32px
  
.category h1
  position: sticky
  top: var(--header-height)
  z-index: 1
  margin: 0
  padding: 20px 0
  background-color: var(--color-grey-darker)