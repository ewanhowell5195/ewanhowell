.container
  max-width: var(--content-width)
  margin: 0 auto
  flex: 1
  height: 100%
  
#banner
  width: 100%
  height: 300px
  background-size: cover
  background-position: 50% 50%
  box-shadow: var(--box-shadow)

img#logo
  padding: 50px
  filter: drop-shadow(-10px 10px 1px var(--color-text-shadow));

#pack-content
  flex: 1
  height: calc(100% - 300px)
  display: flex

#pack-info
  flex: 1

#pack-links
  height: 100%
  width: 256px
  background-color: var(--color-grey-light)
  box-shadow: -10px 0 10px var(--color-box-shadow)