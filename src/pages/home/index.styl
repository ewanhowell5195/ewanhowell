.img-block
  height: 512px
  width: 100%
  background-size: cover
  background-position: 50% 50%
  display: flex
  justify-content: center
  box-shadow: var(--box-shadow)
  
h1
  margin: 0
  padding: 50px 0 0 10%
  font-size: 3em
  text-shadow: -4px 4px 1px var(--color-text-shadow)

a
  color: var(--color-text-blue)

.container
  max-width: var(--content-width)
  margin: 0 auto
  flex: 1
  
.text-block
  max-width: 100%
  min-height: 256px
  display: flex
  justify-content: space-around
  align-items: center
  padding: 0 40px
  flex-wrap: wrap;
  box-sizing: border-box

.text-box
  padding: 10px
  width: 300px
  flex-shrink: 1